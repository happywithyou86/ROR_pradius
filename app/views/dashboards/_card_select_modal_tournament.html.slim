div.modal.fade#card_select_modal_tournament tabindex="-1" role="dialog" aria-hidden="true"
  div.modal-dialog
    div.modal-content
      div.modal-body

        button.close type="button" data-dismiss="modal" aria-hidden="true" &times;

        .message_form_box
          h1  Choose Hand


          = form_tag '#', id: 'best_hand_form' do
            select#card_select_tourn1.card_select name="card_select" class="card_dropdown"
              - Card.all.each do |card|
                option value="#{card.id}" data-suit="/assets/#{card.suit}" data-description="#{card.number}" #{card.number}

